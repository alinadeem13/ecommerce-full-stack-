generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  price       Int      // stored in cents (i.e., 19900 = $199.00)
  image       String?
  createdAt   DateTime @default(now())
}
