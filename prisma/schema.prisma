generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  price       Int
  image       String?
  category    String?
  createdAt   DateTime @default(now())
}
